{
	"name": "@brodao/act-wizard-js",
	"version": "0.0.1",
	"description": "Assistentes para geração de código AdvPL.",
	"license": "SEE LICENSE IN LICENSE",
	"homepage": "https://github.com/brodao/act-wizard-js",
	"repository": {
		"type": "git",
		"url": "https://github.com/brodao/act-wizard-js.git"
	},
	"author": {
		"name": "Alan Cândido",
		"email": "brodao@gmail.com",
		"url": "https://github.com/brodao"
	},
	"contributors": [],
	"keywords": [
		"TDS",
		"ADVPL",
		"Protheus",
		"Wizard"
	],
	"files": [
		"lib"
	],
	"main": "lib/index",
	"types": "lib/index",
	"scripts": {
		"clean": "rimraf lib && rimraf coverage",
		"format": "prettier --write \"{src,tests}/**/*.ts\" --single-quote --trailing-comma es5",
		"lint": "tslint --force --format verbose \"src/**/*.ts\"",
		"prebuild": "npm run clean && echo Using TypeScript && tsc --version",
		"build": "tsc --pretty",
		"watch": "npm run build -- --watch",
		"watch:test": "jest --watch",
		"-- TEST --": "",
		"test": "npm run build && jest",
		"test:snapshot": "npm test -- -u",
		"test:coverage": "npm test -- --coverage",
		"-- PUBLISH --": "",
		"prepare": "npm run format && npm run lint && npm run build && npm run test",
		"release": "standard-version",
		"tag": "git push --follow-tags",
		"prepublishOnly": "npm run test",
		"publish": "npm publish",
		"-- MISC --": "",
		"contributors:add": "all-contributors add",
		"contributors:generate": "all-contributors generate",
		"act:link": "npm link ../act-core-js"
	},
	"dependencies": {
		"strip-json-comments": "^3.1.1",
		"@brodao/act-core-js": "^0.0.1"
	},
	"devDependencies": {
		"@brodao/act-jest-snapshot-console": "^1.0.2",
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@types/jest": "^26.0.10",
		"@types/node": "^14.0.27",
		"all-contributors-cli": "^6.17.1",
		"husky": "^4.3.0",
		"jest": "^26.4.0",
		"prettier": "^2.0.5",
		"standard-version": "^9.0.0",
		"ts-jest": "^26.2.0",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.15.0",
		"typescript": "^4.1.2"
	},
	"engines": {
		"node": ">=10.0.0"
	},
	"jest": {
		"preset": "ts-jest",
		"snapshotSerializers": [
			"act-jest-snapshot-console"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		},
		"repos": [
			{
				"id": "act",
				"label": "Assistentes AC Tools",
				"url": "https://github.com/brodao/actools-vscode/src/",
				"path": "wizards​"
			},
			{
				"id": "act-local",
				"label": "Assistentes locais",
				"url": "file://$USER_HOME/actools/",
				"path": "wizards​"
			}
		]
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	}
}
